{
    "id": "org.kde.krename",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "krename",
    "rename-icon": "krename",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "libexif",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libexif/libexif/releases/download/v0.6.24/libexif-0.6.24.tar.bz2",
                    "sha256": "d47564c433b733d83b6704c70477e0a4067811d184ec565258ac563d8223f6ae",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1607,
                        "stable-only": true,
                        "url-template": "https://github.com/libexif/libexif/releases/download/v$version/libexif-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "utfcpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/nemtrif/utfcpp/archive/refs/tags/v4.0.5.tar.gz",
                    "sha256": "ffc668a310e77607d393f3c18b32715f223da1eac4c4d6e0579a11df8e6b59cf",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 20545,
                        "stable-only": true,
                        "url-template": "https://github.com/nemtrif/utfcpp/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "taglib",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-2.0.tar.gz",
                    "sha256": "e36ea877a6370810b97d84cf8f72b1e4ed205149ab3ac8232d44c850f38a2859",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1982,
                        "stable-only": true,
                        "url-template": "https://taglib.github.io/releases/taglib-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "pcre",
            "config-opts": [
                "--enable-unicode-properties"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://prdownloads.sourceforge.net/pcre/pcre-8.45.tar.bz2",
                    "sha256": "4dae6fdcd2bb0bb6c37b5f97c33c2be954da743985369cddac3546e3218bffb8"
                }
            ]
        },
        {
            "name": "kjs",
            "config-opts": [
                "-DENABLE_TESTING=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.115/portingAids/kjs-5.115.0.tar.xz",
                    "sha256": "9cf4e00070586af43a21d5e4c30c61e66bc1c5f53952d4335bc7df44f9130432",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/portingAids/kjs-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "krename",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/krename/5.0.2/src/krename-5.0.2.tar.xz",
                    "sha256": "b23c60a7ddd9f6db4dd7f55ac55fcca8a558fa68aaf8fa5cb89e1eaf692f23ed",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1521,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/krename/$version/src/krename-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "0001-AppData-Update-for-old-new-releases.patch"
                }
            ],
            "post-install": [
                "desktop-file-edit --set-key=\"Icon\" --set-value=\"${FLATPAK_ID}\" ${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop"
            ]
        }
    ]
}
